{
  "name": "voice-backend",
  "version": "1.0.0",
  "description": "Simplified voice platform backend",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && copyfiles -u 1 src/**/*.xml dist/",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*' --watch '.env' --ext 'ts,js,xml,env' --exec 'ts-node' src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "heroku-postbuild": "npm install && npm run build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.810.0",
    "@azure/openai": "^2.0.0",
    "@types/node-fetch": "^2.6.12",
    "aws-sdk": "^2.1692.0",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mammoth": "^1.9.0",
    "mongodb": "^6.16.0",
    "multer": "^1.4.5-lts.2",
    "node-fetch": "^2.7.0",
    "openai": "^4.98.0",
    "pdf-parse": "^1.1.1",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "copyfiles": "^2.4.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
